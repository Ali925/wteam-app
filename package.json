{
  "name": "wteam",
  "version": "0.0.24",
  "author": "Tural Mehdi <alitural.mehdi@gmail.com>",
  "description": "wteam app",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "active-win": "^6.2.0",
    "applescript": "^1.0.0",
    "electron-fetch": "^1.7.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.5",
    "moment": "^2.22.2",
    "node-window-manager": "^2.2.4",
    "update-electron-app": "^1.5.0"
  },
  "repository": "Ali925/wteam-app",
  "scripts": {
    "start": "electron --enable-transparent-visuals .",
    "rebuild": "electron-rebuild -f -w node-gyp",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "set WIN_CSC_LINK=cert.pfx && set WIN_CSC_KEY_PASSWORD=q1146666 && electron-builder -c.extraMetadata.main=public/electron.js"
  },
  "build": {
    "appId": "com.wteam.chat",
    "mac": {
      "category": "public.app-category.business",
      "icon": "./icons.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "./icon.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^5.0.13",
    "electron-builder": "^22.8.1",
    "electron-notarize": "^1.0.0",
    "electron-rebuild": "^2.2.0",
    "wait-on": "^5.2.0"
  }
}
